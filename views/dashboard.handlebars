<div class="post-list">
    <button onclick="location.href = '/postform'" class="button mb-6 is-link">Create New Post</button>
    {{#each posts as |post|}}
    <div class="card mb-6">
        <div class="card-header has-background-info">
            <a href="api/posts/{{post.id}}" class="card-header-title">
                {{post.title}}
            </a>
        </div>
        <div class="card-content">
            <p class="content">
                {{post.body}}
            </p>
        </div>
        <div class="card-footer has-background-grey-lighter">
            <p class="card-footer-item">
                Posted by you at {{post.date_created}}
            </p>
        </div>
    </div>
    {{/each}}
</div>