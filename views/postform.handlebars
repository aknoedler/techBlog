<form class="container post-form">
    <div class="field">
        <label class="label has-text-white">Title Your Post</label>
        <div class="control">
            <input class="input" type="text" id="post-title" placeholder="title">
        </div>
    </div>
    <div class="field">
        <label class="label has-text-white">Post</label>
        <div class="control">
            <textarea class="textarea" type="text" id="post-body" placeholder="create your post here"></textarea>
        </div>
    </div>
    <div class="field">
        <button class="button" type="submit">Submit</button>
</form>

<script src="./js/postform.js"></script>